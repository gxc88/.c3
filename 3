#include<stdio.h>
#include<string.h>
int main ()
{
 printf("请输入一串字符\n");
 char str[100];
 int num=0,word=0;
 gets(str);
 int i;
 for(i=0;str[i]!='\0';i++)
{
  if(str[i]==' ')
  word=0;
  else if(word==0)
  {
   word=1;
   num++;
  }
}
 int t,j=0,n,x,flag=1;int a[num];
 t = strlen (str);
 for(n=0;n<t;n++)
 { 
   if(str[n]!=' ')
   { 
    x++;
    flag=1;
    }
   else if (str[n]==' ')
   { 	
   a[j]=x;
   flag =0;
   j++;
   x=0;
   }
 	 if(flag)
	{
		a[j]=x;	 	
	} 
}
 int max=0;
 for(i=0;i<num;i++)
 {
  if(a[i]>a[max])
  max=i; 
 }
 printf("最长的单词在第%d位置",max+1);
 
}
